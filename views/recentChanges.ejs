  <body>
    <header>
      <div>
        <img src="/img/GRC_Logo_White.png" alt="Green River Logo" />
        <h1>Recent Change History</h1>
      </div>
    </header>
    <main></main>

    <script defer>
      let table = new DataTable("#order-table");
    </script>

    <script>
      // If the URL contains ?success=true, remove it without reloading the page
      if (window.location.search.includes("success=true")) {
        window.history.replaceState(
          {},
          document.title,
          window.location.pathname
        );
      }
    </script>

    <script>
      // Auto-hide the success banner after 3 seconds
      const banner = document.querySelector(".success-banner");
      if (banner) {
        setTimeout(() => {
          banner.style.opacity = "0";
          banner.style.transition = "opacity 0.5s ease";
        }, 3000);
      }
    </script>
  </body>
